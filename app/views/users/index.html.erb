<center><h1>Users Details</h1> </center>
<% if @users.any? %>
    
    <table class="table table-striped table-bordered" id="users">
        <thead>
            <tr>
                <th>Name</th>
                <th>Password</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.password_digest %></td>
                <td><%= user.created_at %></td>
            </tr>
            <% end %>
            
        </tbody>
    </table>

<% end %>


<center><p><h4> Want to create more users?<strong> <%= link_to "Click Here", new_user_path %></strong> </h4></p></center>